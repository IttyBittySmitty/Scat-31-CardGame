{
  "name": "scat-game",
  "version": "1.0.0",
  "description": "A multiplayer Scat (31) card game",
  "scripts": {
    "start": "node server/src/index.ts",
    "dev": "nodemon server/src/index.ts",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  }
}
